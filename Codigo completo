    est +="DG"
elif estado == "Guerrero":
    est +="GR"
elif estado == "Hidalgo":
    est +="HG"
elif estado == "Jalisco":
    est +="JC"
elif estado == "Nayarit":
    est +="NT"
elif estado == "Morelos":
    est +="MS"
elif estado == "Michoacan":
    est +="MN"
elif estado == "Mexico":
    est +="MC"
elif estado == "Hidalgo":
    est +="HG"
elif estado == "Nuevo Leon":
    est +="NL"
elif estado == "Oaxaca":
    est +="OC"
elif estado == "Puebla":
    est +="PL"
elif estado == "Queretaro":
    est +="QT"
elif estado == "Quintana Roo":
    est +="QR"
elif estado == "San Luis  Potosi":
    est +="SP"
elif estado == "Sinaloa":
    est +="SL"
elif estado == "Sonora":
    est +="SR"
